<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlybar"
        android:layout_height="50dp"
        android:background="@color/topbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="normal|bold"
            android:text="Event Detail Data" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/backbutton"
            android:id="@+id/img_dedaback"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlybar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deta"
            android:id="@+id/image_hm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/licontain"
            android:layout_below="@+id/image_hm">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txttitle"
                    android:textColor="@color/text2col"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Walking /Run "
                    android:textStyle="normal|bold"
                    android:textSize="25dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="Always and the Day with a Positive Thought No mat.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdescription"
                    android:textColor="@color/text2col"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="Feb 5, 2017 7pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdate"
                    android:textColor="@color/text2col"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtplace"
                    android:textColor="@color/text2col"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Lake Worth , Florida, US" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerson"
                    android:textColor="@color/text2col"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Natural" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcategory"
                    android:textColor="@color/text2col"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:elevation="1dp"
                    android:text="2017-02-08" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1dp"></LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>